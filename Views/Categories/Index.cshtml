@model IEnumerable<Project1.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@Html.Raw(TempData["DeletedMessage"])

@Html.Raw(TempData["UpdatedMessage"])

@Html.Raw(TempData["InsertMessage"])

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.expense.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CatExpLimit)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.expense.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CatExpLimit)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CatId }) |
                @Html.ActionLink("Details", "Details", new { id = item.CatId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CatId })
            </td>
        </tr>
    }

</table>
